<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> </h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :original_price  %>
    <%= form.text_field :original_price %>
  </div>

  <div class="field">
    <%= form.label :has_discount %>
    <%= form.text_area :has_discount, cols: 6, rows: 10 %>
  </div>

  <div class="field">
    <%= form.label :discount_percentage %>
    <%= form.text_field :discount_percentage %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
